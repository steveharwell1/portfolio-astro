---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob('../projects/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())].sort();
---

<BaseLayout pageTitle="Tags">
    <p>Browse Projects by tag.</p>
        <ul>
            {
                tags.map((tag) => (
                    <li>
                        <a href={tag}>{tag}</a>
                    </li>
                ))
            }
        </ul>
</BaseLayout>