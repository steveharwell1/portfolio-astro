---
import BaseLayout from "../../layouts/BaseLayout.astro";
const allPosts = await Astro.glob('../projects/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())].sort();
---

<BaseLayout pageTitle="Tags">
    <p>Browse Projects by tag.</p>
        <ul class="tags">
            {
                tags.map((tag) => (
                    <li class="tag">
                        <a href={tag}>{tag}</a>
                    </li>
                ))
            }
        </ul>
</BaseLayout>
<style>
    a {
      color: #00539F;
    }
  
    .tags {
      display: flex; 
      flex-wrap: wrap;
      padding-left: 0;
      gap: .25em;
    }
  
    .tag {
      border: dotted 1px #a1a1a1;
      border-radius: .5em;
      padding: .5em 1em;
      font-size: 1.15em;
      background-color: #F8FCFD;
      list-style: none;
    }
  </style>
